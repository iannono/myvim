[user]
	name = xiongbo
	email = xiongbo027@gmail.com
[core]
	editor = vim
  autocrlf = input
[push]
  default = simple
[branch]
  autosetuprebase = always
[color]
  ui = true
[rerere]
  enabled = true
[alias]
  lg = log --oneline --decorate --all --graph
  s = status -s
  cm = commit
  ck = checkout
  df = diff
  dc = diff --cached
  amend = commit --amend
  aa = add --all
  ff = merge --ff-only
  pullff = pull --ff-only
  noff = merge --no-ff
